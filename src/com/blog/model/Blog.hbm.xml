<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.blog.model.Blog" table="blogcontent">
		<id name="blog_id" type="int" column="blog_id">
			<generator class="identity"></generator>
		</id>
		<property name="title" type="string"></property>
		<property name="src" type="string"></property>
		<property name="classify" type="string"></property>
		<property name="logo" type="string"></property>
		<property name="content" type="string"></property>
		<property name="href" type="string"></property>
		<property name="publish" type="string"></property>
		<property name="preface" type="string"></property>
		<property name="article_classify" type="string"></property>
		<property name="tag" type="string"></property>
		<property name="display" type="string"></property>
		<property name="view" type="int"></property>
	</class>
</hibernate-mapping>