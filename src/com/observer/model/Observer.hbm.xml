<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.observer.model.Observer" table="observer">
		<id name="id" type="int" column="id">
			<generator class="identity"></generator>
		</id>
		<property name="pid" type="int"></property>
		<property name="blog_id" type="int"></property>
		<property name="name" type="string"></property>
		<property name="email" type="string"></property>
		<property name="website" type="string"></property>
		<property name="words" type="string"></property>
		<property name="publish" type="string"></property>
		<property name="avatar" type="string"></property>
	</class>
</hibernate-mapping>